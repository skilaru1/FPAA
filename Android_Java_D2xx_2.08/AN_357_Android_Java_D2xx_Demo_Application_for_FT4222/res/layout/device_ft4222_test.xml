<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >
    
	<Button
        android:id="@+id/btnI2CConfig"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="I2C Config" />
	
	<Button
        android:id="@+id/btnGPIOConfig"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GPIO Config" />
	
    <Button
        android:id="@+id/btnTest1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FT4222_ChipReset" />

    <Button
        android:id="@+id/btnTest2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FT4222_SetWakeUpInterrupt" />

    <Button
        android:id="@+id/btnTest3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FT4222_SetInterruptTrigger" />

    <Button
        android:id="@+id/btnTest4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FT4222_GPIO_GetTriggerSatus" />

    <Button
        android:id="@+id/btnTest5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FT4222_I2CSlave_SetClockStretch" />
    
    <Button
        android:id="@+id/btnCloseDevice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CloseDevice" />

</LinearLayout>